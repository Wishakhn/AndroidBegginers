<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/purpleBox"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/fade_purple_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:text="Get Special" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="Sale up to 45%" />
    </androidx.appcompat.widget.LinearLayoutCompat>
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/shoe1"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/purpleBox"
    android:src="@drawable/sneakers"
    android:padding="20dp"
    android:background="@drawable/fade_pink_background"
    />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shoe2"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpleBox"
        android:src="@drawable/sneakers"
        android:padding="20dp"
        android:background="@drawable/fade_yello_background"
        />





</androidx.constraintlayout.widget.ConstraintLayout>